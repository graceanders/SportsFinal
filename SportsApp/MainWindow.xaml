<Window x:Class="SportsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportsApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Sports App</Label>
            <Button x:Name="CMSportbtn" Content="Create/Modify Sport" Click="CMSportbtn_Click"/>
            <Button x:Name="CMPlayerbtn" Content="Create/Modify Player" Click="CMPlayerbtn_Click"/>
            <Button x:Name="CMTeambtn" Content="Create/Modify Team" Click="CMTeambtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
